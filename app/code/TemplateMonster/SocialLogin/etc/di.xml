    <type name="TemplateMonster\SocialLogin\Model\ResourceModel\Provider\Collection">
        <arguments>
            <argument name="reader" xsi:type="object">TemplateMonster\SocialLogin\Model\Provider\Config\Reader</argument>
        </arguments>
