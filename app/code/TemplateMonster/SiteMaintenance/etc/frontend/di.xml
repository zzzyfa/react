    <type name="Magento\Framework\App\RouterList">
        <arguments>
            <argument name="routerList" xsi:type="array">
                <item name="tmmaintenance" xsi:type="array">
                    <item name="class" xsi:type="string">TemplateMonster\SiteMaintenance\Controller\Router</item>
                    <item name="disable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="string">0</item>
                </item>
            </argument>
        </arguments>
    </type>
    <preference
            for="Magento\PageCache\Model\App\FrontController\BuiltinPlugin"
            type="TemplateMonster\SiteMaintenance\Model\PageCache\App\FrontController\BuiltinPlugin"
            />
</config>