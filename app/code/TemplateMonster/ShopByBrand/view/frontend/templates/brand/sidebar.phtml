<?php
/** @var \TemplateMonster\ShopByBrand\Block\Brand\Sidebar $block */

$collection = $block->getBrandCollection();
$helper = $this->helper('TemplateMonster\ShopByBrand\Helper\Data');
?>

<?php if(!empty($collection->getData())): ?>
<div class="block block-brand">
    <div class="block-title">
        <strong><?php /* @escapeNotVerified */ echo __('Brands') ?></strong>
    </div>
    <ul class="product-items">
    <?php foreach ($collection as $brand): ?>
        <li class="product-item">
            <div class="product-item-info">
                <?php if ($block->isShowSidebarLogo() && $brand->getImageLogoName()): ?>
                <a class="product-image-photo" href="<?php echo $brand->getUrl() ?>">
                    <?php /* echo $block->getImage($brand->getImageLogoUrl())->toHtml() */ ?>
                    <img src="<?php  echo $helper->resizeImageUrl($brand->getImageLogoName(), 200); ?>" alt="<?php echo $block->escapeHtml($brand->getName()) ?>" />
                </a>
                <?php endif; ?>
                <?php if ($block->isShowSidebarName()): ?>
                <div class="product-item-details">
                    <strong class="product-item-name">
                        <a class="product-item-link" href="<?php echo $brand->getUrl(); ?>">
                            <span><?php echo $block->escapeHtml($brand->getName()) ?></span>
                        </a>
                    </strong>
                </div>
                <?php endif; ?>
            </div>
        </li>
    <?php endforeach; ?>
    </ul>
    <div class="actions-toolbar">
        <div class="primary">
            <a class="action details" href="<?php echo $block->getAllBrandsUrl() ?>" title="<?php /* @escapeNotVerified */ echo __('View All') ?>">
                <span><?php /* @escapeNotVerified */ echo __('View All') ?></span>
            </a>
        </div>
    </div>
</div>
<?php endif; ?>