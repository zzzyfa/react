        </arguments>
    </type>
    <type name="Amasty\Rma\Controller\Guest\Login">
        <arguments>
            <argument name="context" xsi:type="object">ActionContextWithUrlBuilder</argument>
        </arguments>
    </type>
    <type name="Amasty\Rma\Controller\Guest\LoginPost">
        <arguments>
