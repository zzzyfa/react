        </arguments>
    </type>
    <type name="Amasty\Rma\Controller\Request\NewAction">
        <arguments>
            <argument name="context" xsi:type="object">ActionContextWithUrlBuilder</argument>
        </arguments>
    </type>
    <type name="Amasty\Rma\Controller\Request\View">
        <arguments>
            <argument name="context" xsi:type="object">ActionContextWithUrlBuilder</argument>
        </arguments>
    </type>

    <type name="Amasty\Rma\Controller\Guest\History">
        <arguments>
