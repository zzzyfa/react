<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="AltheaTech\Talkable\Helper\Config" type="Althea\Talkable\Helper\Config"/>
    <type name="Althea\Talkable\Logger\Handler\Custom">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Althea\Talkable\Logger\TalkableLogger">
        <arguments>
            <argument name="name" xsi:type="string">talkableLogger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">Althea\Talkable\Logger\Handler\Custom</item>
            </argument>
        </arguments>
    </type>
</config>